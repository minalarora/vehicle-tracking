<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mid_gray"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background_dailog"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_size_xlarge"
                android:text="Start Up Screen"
                android:textColor="@color/gen_black"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg_startUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_large"
                android:layout_marginRight="@dimen/text_size_large">

                <RadioButton
                    android:id="@+id/rb_dashboard_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:checked="true"
                    android:text="Dashboard"
                    android:tag="d1"
                    android:textSize="@dimen/text_size_xmedium" />

                <RadioButton
                    android:id="@+id/rb_dashboard_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:tag="d2"
                    android:text="Dashboard New"
                    android:textSize="@dimen/text_size_xmedium" />

                <RadioButton
                    android:id="@+id/rb_dashboard_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:tag="d3"
                    android:text="Round Dashboard"
                    android:textSize="@dimen/text_size_xmedium" />

                <RadioButton
                    android:id="@+id/rb_vehiclestatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:text="Vehicle Status"
                    android:tag="d4"
                    android:textSize="@dimen/text_size_xmedium" />

<!--                <RadioButton-->
<!--                    android:id="@+id/rb_livetracking"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                    android:checked="false"-->
<!--                    android:tag="d5"-->
<!--                    android:text="Live Tracking"-->
<!--                    android:textSize="@dimen/text_size_xmedium" />-->
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/layout_margin_10"
                android:layout_marginBottom="@dimen/text_size_large"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_startup_cancel"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:text="CLOSE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_startup_save"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>