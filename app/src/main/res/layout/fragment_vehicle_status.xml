<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.VehicleStatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_search_button_round"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sBarET_vStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/search_black"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:hint="Search You Vehicle"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp">

        </EditText>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_v_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
