<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mid_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/background_dailog"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Ringtone"
                android:textStyle="bold"
                android:textColor="@color/gen_black"
                android:padding="@dimen/text_size_xlarge"
                android:textSize="@dimen/text_size_xlarge"/>
            <view
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="#9e9e9e">

            </view>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/layout_margin_10">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_size_large"
                android:layout_marginLeft="@dimen/text_size_large"
                >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default Ringtone"
                    android:id="@+id/radioButton"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carme"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ceres"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default Ringtone"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dialing_Max"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dreaming"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elara"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Europa"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FUnky_Arabia"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gated_Eura"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lapetus"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lo"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="_Latino_Tarintino"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mid_tempo_Funk"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open_Arms"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rhea"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default Ringtone"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salacia"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tango_In_Love"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="@dimen/text_size_medium" />



            </RadioGroup>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginBottom="@dimen/text_size_large">
                <TextView
                    android:id="@+id/cancel_ringtone"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="CANCEL"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="SAVE"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>