<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mid_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background_dailog"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert"
                android:textStyle="bold"
                android:textColor="@color/gen_black"
                android:padding="@dimen/text_size_xlarge"
                android:textSize="@dimen/text_size_xlarge"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_size_large"
                android:layout_marginLeft="@dimen/text_size_large"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin_10">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Notification"
                        android:gravity="center_vertical"
                        android:textColor="#9e9e9e"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:textSize="@dimen/text_size_xmedium" />
                    <Switch
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/arrow_right_mv"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin_10">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Vibrate"
                        android:gravity="center_vertical"
                        android:textColor="#9e9e9e"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:textSize="@dimen/text_size_xmedium" />
                    <Switch
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/arrow_right_mv"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin_10">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Sound"
                        android:gravity="center_vertical"
                        android:textColor="#9e9e9e"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:textSize="@dimen/text_size_xmedium" />
                    <Switch
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/arrow_right_mv"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin_10">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Custome Notification Ringtone"
                        android:gravity="center_vertical"
                        android:textColor="#9e9e9e"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:textSize="@dimen/text_size_medium" />
                    <Switch
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/arrow_right_mv"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/set_ringtone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/layout_margin_10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification Tone"
                        android:gravity="center_vertical"
                        android:textColor="#9e9e9e"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:textSize="@dimen/text_size_medium" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Default ringtone(Titan)"
                        android:gravity="center_vertical"
                        android:textColor="#9e9e9e"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginBottom="@dimen/text_size_large">
                <TextView
                    android:id="@+id/cancel_alert"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="CLOSE"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>