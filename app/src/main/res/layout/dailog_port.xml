<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mid_gray"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/background_dailog"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_size_large"
                android:text="Settings"
                android:textColor="@color/gen_black"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_large"
                android:layout_marginRight="@dimen/text_size_large"
                android:text="First four selected ports will be on Vehicle status."
                android:textColor="@color/gen_black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="#9e9e9e">

            </View>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/text_size_xlarge"
                android:paddingRight="@dimen/text_size_xlarge">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ac_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="AC"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/text_size_xmedium" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/menu_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_medium"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/wifi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="GPS"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/text_size_xmedium" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/menu_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_medium"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/battery_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Power"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/text_size_xmedium" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:buttonTint="@color/colorPrimary"
                            android:src="@mipmap/menu_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_medium"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/fuel_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Fuel"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/text_size_xmedium" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/menu_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_medium"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/key_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="IGN"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/text_size_xmedium" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/menu_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_medium"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/seat_belt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Seatbelt"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/text_size_xmedium" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:buttonTint="@color/colorPrimary"
                            android:checked="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/menu_button" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/text_size_large"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel_port"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>