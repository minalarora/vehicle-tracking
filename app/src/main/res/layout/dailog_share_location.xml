<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mid_gray"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/background_dailog"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_size_large"
                android:text="Share Location"
                android:textColor="@color/gen_black"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_large"
                android:layout_marginRight="@dimen/text_size_large"
                android:text="Validity"
                android:textColor="@color/gen_black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height=".5dp"-->
            <!--android:background="#9e9e9e">-->

            <!--</View>-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="@dimen/layout_margin_10"
                android:layout_weight="1"
                android:paddingLeft="@dimen/text_size_xlarge"
                android:paddingRight="@dimen/text_size_xlarge">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/shareLocation_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatSpinner>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:layout_marginTop="2dp"
                        android:background="#9e9e9e">

                    </View>
                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/text_size_large"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel_port"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/save_port"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>